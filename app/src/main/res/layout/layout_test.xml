<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:drawableEnd="@drawable/ic_error_black_24dp"
        android:drawableStart="@drawable/ic_cloud_download_black_24dp"
        android:drawableTop="@color/colorPrimary"
        android:text="sfffffff"
        android:textColor="#FFFFFF"/>

    <cc.colorcat.toolbox.widget.TernaryTextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_margin="24dp"
        android:background="#FF0000"
        android:padding="8dp"
        app:drawableCenter="@color/lightGrey"
        app:drawableEnd="@drawable/bg_tag_end"
        app:drawableStart="@drawable/bg_tag_start"
        app:text="this 中国 北京"/>

    <cc.colorcat.toolbox.widget.TernaryTextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_margin="24dp"
        android:background="#FF0000"
        android:padding="8dp"
        app:drawableCenter="@color/lightGrey"
        app:drawableEnd="@drawable/bg_tag_end"
        app:drawableStart="@drawable/bg_tag_start"
        app:text="北京"/>

    <cc.colorcat.toolbox.widget.TernaryTextView
        android:id="@+id/ttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="#FF0000"
        app:drawableCenter="@color/lightGrey"
        app:drawableEnd="@drawable/bg_tag_end"
        app:drawableStart="@drawable/bg_tag_start"
        app:text="中国"/>

</LinearLayout>